@{
    var title = ViewData["Title"] as string ?? "GEChoice";
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
</head>
<body style="margin:0;background:#f9fafb;color:#111827">
    <header style="border-bottom:1px solid #e5e7eb;background:#fff">
        <div style="max-width:1160px;margin:0 auto;padding:14px 20px;display:flex;align-items:center;justify-content:space-between">
            <div style="display:flex;align-items:center;gap:10px;font-weight:800;color:#15803d">
                <div style="width:26px;height:26px;border-radius:50%;background:linear-gradient(135deg,#22c55e,#16a34a)"></div>
                <a href="/" style="color:inherit;text-decoration:none">GEChoice</a>
            </div>
            <nav style="display:flex;gap:10px">
                <a href="/" style="text-decoration:none;color:#111827;padding:8px 10px;border-radius:10px">ダッシュボード</a>
                <a href="/Vote" style="text-decoration:none;color:#fff;padding:10px 14px;border-radius:12px;background:linear-gradient(180deg,#22c55e,#16a34a);border:1px solid #16a34a;font-weight:700">投票する</a>
            </nav>
        </div>
    </header>
    <main style="max-width:1160px;margin:0 auto;padding:24px 20px">
        @RenderBody()
    </main>
    <footer style="border-top:1px solid #e5e7eb;color:#6b7280;padding:16px 20px;text-align:center">© GEChoice</footer>
    @RenderSection("Scripts", false)
</body>
</html>